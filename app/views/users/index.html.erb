<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
       <tbody>
        <tr>
         <th>name</th>
         <th><%= @user.name %></th>
        </tr>
        <tr>
         <th>introduction</th>
         <th><%= @user.introduction %></th>
        </tr>
       </tbody>
      </table>

      <div class="row">
       <% if @user == current_user %>
       <%= link_to edit_user_path(@user), class: 'btn btn-outline-secondary btn-block' do %>
       <i class="fas fa-user-cog"></i><% end %>
       <% end %>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book_new do |f| %>
         <div class="from_group">
           <div><%= f.label :Title %></div>
           <div><%= f.text_field :title %></div>
         </div>

         <div class="from_group">
           <div><%= f.label :Opinion %></div>
           <div><%= f.text_area :body %></div>
         </div>

         <div class="from_group">
         <%= f.submit 'Create Book', class: "btn btn-success" %>
         </div>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
    <h1>Users</h1>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= image_tag @user.get_profile_image(100, 100) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>