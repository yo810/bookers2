<body>

  <% if @book.errors.any? %>
　<div id="error_explanation">
　  <h2><%= @book.errors.count %> error prohibited this book from being saved:　</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">

        <h1>Editing Book</h1>
        <%= form_with model: @book do |f| %>

        <div class="form_group">
          <div><%= f.label :Title %></div>
          <div><%= f.text_field :title %></div>
        </div>

        <div class="form_group">
          <div><%= f.label :Opinion %></div>
          <div><%= f.text_area :body %></div>
        </div>

        <div class="from_group">
          <div><%= f.submit 'Update Book', class: "btn btn-success" %></div>
        </div>
        <% end %>

        <%= link_to "Show", book_path(@book) %>
         |
        <%= link_to "Back", books_path %>

      </div>
    </div>
  </div>
</body>