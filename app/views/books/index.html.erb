<body>

 <h1>New book</h1>
   <%= form_with model: @book do |f| %>
    <div class="field">
      <div><%= f.label :title %></div>
      <div><%= f.text_field :title %></div>
    </div>

    <div class="field">
      <div><%= f.label :body %></div>
      <div><%= f.text_area :body %></div>
    </div>

    <div class="action">
    <%= f.submit 'Create Book' %>
    </div>
   <% end %>

